@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron jumbotron-fluid title-card">
  <div class="container text-center">
    <img src="~/dist/logo.png" alt="Warbler" style="width: 400px; max-width: 100%; user-select: none; -webkit-user-drag: none;"/>
    <p class="lead">Auto-generated, geolocation based chatrooms for universities.</p>
  </div>
</div>

<div id="home-content" class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title">What is Warbler?</h4>
        <h6 class="card-subtitle mb-2 text-muted">Software-as-a-service</h6>
        <p class="card-text">
          Warbler is an online communication platform that allows university students to chat with other students at their university.
          This is accomplished via automated chatroom generation based on a proximity search for nearby universities.
          Click <a asp-controller="Chat" asp-action="Index">here</a> to get started.
        </p>
        <a href="https://goo.gl/SMZExQ" class="card-link">Senior design poster</a>
        <a href="https://github.com/bcanseco/warbler" class="card-link">Source code</a>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title">Who are you?</h4>
        <h6 class="card-subtitle mb-2 text-muted">Team members:</h6>
        <ul>
          <li><strong>Lead:</strong> Borja Canseco <span class="badge badge-default">b@my.fit.edu</span></li>
          <li>Billy Harris <span class="badge badge-default">harrisw2014@my.fit.edu</span></li>
