@model ClaimUniversityViewModel
@{
    ViewData["Title"] = "Claim University";
}

@await Html.PartialAsync("_HeadingPartial", ViewData)

<div class="row">
    <div class="col-sm-12 col-md-7">
        <form asp-controller="Manage" asp-action="ClaimUniversity" method="post" class="form-horizontal">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="col-md-6"></label>
                <div class="col-md-12">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="col-md-6"></label>
                <div class="col-md-12">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="col-md-6"></label>
                <div class="col-md-12">
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PositionTitle" class="col-md-6"></label>
                <div class="col-md-12">
                    <input asp-for="PositionTitle" class="form-control" />
                    <span asp-validation-for="PositionTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UniversityName" class="col-md-6"></label>
                <div class="col-md-12">
                    <input asp-for="UniversityName" class="form-control" />
                    <span asp-validation-for="UniversityName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UniversityWebsite" class="col-md-6"></label>
                <div class="col-md-12">
                    <input asp-for="UniversityWebsite" class="form-control" />
                    <span asp-validation-for="UniversityWebsite" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-outline-primary">Submit claim</button>
                </div>
            </div>
        </form>
    </div>
</div>

