@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}

@await Html.PartialAsync("_HeadingPartial", ViewData)

<div class="row">
  <div class="col-12">
    <div class="row" style="margin-bottom: 5px">
      <div class="col-12">
        <div class="text-success">@ViewData["StatusMessage"]</div>
      </div>
    </div>
    <hr />
    <div class="list-group col-md-6 col-lg-4 col-xl-3">
      @if (Model.HasPassword)
      {
        <a asp-controller="Manage" asp-action="ChangePassword" class="list-group-item list-group-item-action">Change your password</a>
      }
      else
      {
        <a asp-controller="Manage" asp-action="SetPassword" class="list-group-item list-group-item-action">Create your password</a>
      }
      @if (Model.ClaimedUniversity == null)
      {
        <a asp-controller="Manage" asp-action="ClaimUniversity" class="list-group-item list-group-item-action">Claim a university</a>
      }
      else
      {
        <a asp-controller="Manage" asp-action="University" asp-route-id="@Model.ClaimedUniversity.Id" class="list-group-item list-group-item-action">Manage @Model.ClaimedUniversity.Name</a>
      }
    </div>
