@using Warbler.Extensions
<!DOCTYPE html>
<html lang="en" xml:lang="en" xmlns= "http://www.w3.org/1999/xhtml">
<head>
  <base href="~/" />
  <meta charset="utf-8"/>
  <meta http-equiv="Content-Language" content="en">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta description="Auto-generated, geolocation based chatrooms for universities."/>
  <title>@ViewData["Title"] - Warbler</title>
  
  <link rel="icon" href="~/dist/favicon.ico"/>
  <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true"/>
  <link rel="stylesheet" href="~/dist/shared-styles.dist.css" asp-append-version="true"/>
  @RenderSection("styles", required: false)
</head>
<body>
  <nav class="navbar navbar-toggleable-sm navbar-light bg-faded">
    <div class="container" id="navbar-container">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" 
              data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <span class="navbar-brand no-click-events" href="#">Warbler</span>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Documents" asp-action="Index">Documents</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Chat" asp-action="Index">Chat</a>
          </li>
          @if (User.IsInRole("Developer"))
          {
            <li class="nav-item">
              <a class="nav-link" asp-controller="Dev" asp-action="Index">Dev</a>
            </li>
          }
        </ul>
        @await Html.PartialAsync("_LoginPartial")
      </div>
    </div>
  </nav>

  <div class="@((bool?)ViewData["Fluid"] ?? false ? "container-fluid" : "container")">
    @RenderBody()
    <hr/>
    <footer class="text-muted no-click-events">
      <p class="float-left">This page is a work in progress</p>
      <p class="float-right">@(Context.User.Identity.Name ?? "Not loggged in") | @(Html.IsDebug() ? "DEV DB" : "AZURE DB") | @DateTime.Now</p>
    </footer>
  </div>

  <script src="~/dist/vendor.js" asp-append-version="true"></script>
  <script src="~/dist/shared-scripts.dist.js" asp-append-version="true"></script>
  @RenderSection("scripts", required: false)
</body>
</html>
