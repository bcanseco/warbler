@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Manage" asp-action="Index">Settings</a>
            </li>
            <li class="nav-item">
                <a href="#" id="logout-submit-link" class="nav-link">Log out</a>
            </li>
        </ul>
        <button type="submit" style="display:none"></button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Log in</a>
        </li>
    </ul>
}

<script type="text/javascript">
  // hack to allow using an <a> tag as an asp.net form button
  // otherwise the button styling in the nav is ugly
  var logout = document.getElementById("logout-submit-link");
  if (logout) {
    logout.addEventListener("click", function (e) {
      e.preventDefault();
      document.forms.item(0).submit();
    });
  }
</script>
